//- container.jade

mixin container(title, header_classes)
    .container&attributes(attributes)
        if title
            +container-header(title)(class=header_classes)
        block

mixin container-header(title)
    .container-header&attributes(attributes)
        if title
            +container-header-center
                = title
        block

mixin container-header-left
    .container-header-sub.left&attributes(attributes)
        block

mixin container-header-center
    .container-header-sub.center&attributes(attributes)
        block

mixin container-header-right
    .container-header-sub.right&attributes(attributes)
        block

mixin container-content
    .container-content&attributes(attributes)
        block

mixin container-footer
    .container-footer&attributes(attributes)
        block

mixin simple-container(title, header_classes)
    .container&attributes(attributes)
        if title
            +container-header(title)(class=header_classes)
        +container-content
            block
