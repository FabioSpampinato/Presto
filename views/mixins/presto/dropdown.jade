mixin dropdown-btn(title, id)
    .button.actionable.dropdown-btn.dropdown-trigger(data-dropdown="dropdown-"+id)&attributes(attributes)
        = title
        +icon("navigation-expand-more").right

mixin dropdown-btn-icon(icon, id)
    .button.actionable.compact.dropdown-btn.dropdown-trigger(data-dropdown="dropdown-"+id)&attributes(attributes)
        +icon(icon)

mixin dropdown(id)
    .dropdown(id="dropdown-"+id)&attributes(attributes)
        .top-tip
        .left-tip
        .right-tip
        .container
            block
        .bottom-tip
