//- button.jade

mixin button(href)
    if href
        if href.slice ( 0, 11 ) === 'javascript:'
            .button.actionable(onclick=href)&attributes(attributes)
                block
        else if href[href.length-1] === ')' || href.slice ( -2 ) === ');'
            .button.actionable(onclick="javascript:"+href)&attributes(attributes)
                block
        else
            a.button.actionable(href=href)&attributes(attributes)
                block
    else
        .button.actionable&attributes(attributes)
            block

mixin button-left
    .label-left&attributes(attributes)
        block

mixin button-center
    .label-center&attributes(attributes)
        block

mixin button-right
    .label-right&attributes(attributes)
        block

mixin button-simple(href)
    +button(href)&attributes(attributes)
        +button-center
            block

mixin button-icon(icon)
    +button&attributes(attributes).compact
        +button-center
            +icon(icon)
        block
