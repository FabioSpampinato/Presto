//- divider.jade

mixin divider
    .divider-wrp
        .divider.bold&attributes(attributes)
            block

mixin divider-linear
    if block
        .divider-wrp
            .divider.linear&attributes(attributes)
                block
    else
        hr&attributes(attributes)

mixin divider-text
    .divider-wrp
        .divider.text&attributes(attributes)
            block
