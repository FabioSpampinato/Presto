//- tools/toggleHeight.jade

extends ../../layout.jade

append body
+divider Paragraph
    .grid
        .grid_cols.limited
            .grid_col
                .container
                    #toggable(style="transition: height 0.5s ease 0s; overflow: hidden;")
                        .container(class="secondary")
                            p
                                +lorem-ipsum
                    p
                        +lorem-ipsum

+divider Action
    .grid
        .grid_cols.limited
            .grid_col
                .multiple
                    .button.actionable.outlined(onclick="javascript:toggle_height()") Toggle height
                    .button.actionable.outlined(onclick="javascript:set_speed(0.5)") Set 0.5s
                    .button.actionable.outlined(onclick="javascript:set_speed(1)") Set 1s
                    .button.actionable.outlined(onclick="javascript:set_speed(3)") Set 3s

append body-end
    script(type="text/javascript").
        function toggle_height () {
            $('#toggable').toggleHeight ();
        }
        function set_speed ( speed ) {
            $('#toggable').css ( 'transition', 'height ' + speed + 's ease 0s' );
        }
