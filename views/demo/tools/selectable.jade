//- tools/selectable.jade

extends ../../layout.jade

append main
    +divider Selectable

    +container-simple
        table.selectable
            thead
                tr
                    th Int
                    th String
                    th Date
                    th Options
            tfoot

            tbody
                +table-tr-empty
                - var nr = 1;
                while ( nr <= 10 )
                    tr
                        td= nr++
                        td Foo
                        td 16/11/1993
                        td
                            +multiple.centered
                                +button-simple("#").outlined.xsmall Btn 1
                                +button-simple("#").outlined.xsmall Btn 2
                    tr
                        td= nr++
                        td Bar
                        td 16 Nov 1993
                        td
                            +multiple.centered
                                +button-simple("#").outlined.xsmall Btn 1
                                +button-simple("#").outlined.xsmall Btn 2
