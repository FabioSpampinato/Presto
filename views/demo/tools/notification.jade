//- tools/notification.jade

extends ../../layout.jade

append body
    +divider Notifications

    .multiple
        .button.actionable.outlined(onclick="notification_test()") Single
        .button.actionable.outlined(onclick="notification_test(true)") Both

append body-end
    +script.
        function notification_test ( both ) {
            $.notification ( { title: "Test title", body: "Example test description", img: "/assets/images/presto/sample.png" }, both );
        }
