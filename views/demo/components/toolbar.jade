//- components/toolbar.jade

extends ../../layout.jade

append main
    +divider Toolbars

    +toolbar.yellow
        +toolbar-icon("navigation-menu")
        span.large Title
        .spacer
        +toolbar-icon("navigation-refresh")
        +toolbar-icon("navigation-more-vert")

    +toolbar.violet
        +toolbar-icon("navigation-menu")
        +breadcrumb.large
            a(href="#", title="Components") Components
            a(href="#", title="Toolbars").current Toolbars
        .spacer
        +toolbar-icon("navigation-more-vert")

    +toolbar.orange
        +toolbar-icon("navigation-menu")
        span.large Schedule
        .spacer
        +toolbar-icon("action-search")
        +toolbar-icon("navigation-more-vert")

    +toolbar.green
        span.large Toolbar
        .spacer
        +toolbar-icon("action-search")
        +toolbar-icon("social-person")
        +toolbar-icon("navigation-more-vert")

    +toolbar.blue
        +toolbar-icon("navigation-arrow-back")
        span.large Main page
        .spacer
        +toolbar-icon("navigation-more-vert")

    +toolbar.red
        +toolbar-icon("navigation-menu")
        +icon("image-image").xxxxlarge
        span.large Title
        .spacer
        +switcher({name:"name", value:"value", colors:{on:"orange",off:"blue"}, icons:{on:"action-favorite", off:"action-favorite-outline"}})
        +toolbar-icon("action-search")
