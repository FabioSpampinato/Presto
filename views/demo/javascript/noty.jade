//- javascript/noty.jade

extends ../../layout.jade

append main
    +divider Text

    +multiple
        +button.outlined(onclick="noty_test_short()") Short
        +button.outlined(onclick="noty_test_medium()") Medium
        +button.outlined(onclick="noty_test_long()") Long

    +divider API calls

    +multiple
        +button.outlined(onclick="noty_test_api_create()") Create
        +button.outlined(onclick="noty_test_api_open()") Open
        +button.outlined(onclick="noty_test_api_close()") Close

    +divider Anchors

    +multiple
        +button.outlined(onclick="noty_test_anchor('top-left')") Top-Left
        +button.outlined(onclick="noty_test_anchor('top-right')") Top-Right
        +button.outlined(onclick="noty_test_anchor('bottom-left')") Bottom-Left
        +button.outlined(onclick="noty_test_anchor('bottom-right')") Bottom-Right

    +divider Buttons

    +multiple
        +button.outlined(onclick="noty_test_btns_one()") One
        +button.outlined(onclick="noty_test_btns_two()") Two
        +button.outlined(onclick="noty_test_btns_three()") Three

    +divider Advanced

    +multiple
        +button.outlined(onclick="noty_test_adv_one()") Title + Body
        +button.outlined(onclick="noty_test_adv_two()") Title + Body + Image
        +button.outlined(onclick="noty_test_adv_three()") Title + Body + Image + Buttons
        +button.outlined(onclick="noty_test_adv_four()") Title + Custom body + Image + Buttons

    +divider Colors

    +multiple
        +button.primary(onclick="noty_test_colored('primary')") Primary
        +button.secondary(onclick="noty_test_colored('secondary')") Secondary
        +button.tertiary(onclick="noty_test_colored('tertiary')") Tertiary
        +button.quaternary(onclick="noty_test_colored('quaternary')") Quaternary
        +button.white(onclick="noty_test_colored('white')") White
        +button.gray(onclick="noty_test_colored('gray')") Gray
        +button.black(onclick="noty_test_colored('black')") Black
        +button.yellow(onclick="noty_test_colored('yellow')") Yellow
        +button.olive(onclick="noty_test_colored('olive')") Olive
        +button.green(onclick="noty_test_colored('green')") Green
        +button.blue(onclick="noty_test_colored('blue')") Blue
        +button.violet(onclick="noty_test_colored('violet')") Violet
        +button.orange(onclick="noty_test_colored('orange')") Orange
        +button.purple(onclick="noty_test_colored('purple')") Purple
        +button.red(onclick="noty_test_colored('red')") Red
        +button.pink(onclick="noty_test_colored('pink')") Pink
        +button.teal(onclick="noty_test_colored('teal')") Teal
        +button.brown(onclick="noty_test_colored('brown')") Brown
        +button.transparent(onclick="noty_test_colored('transparent')") Transparent

append body-end
    +script.
        function noty_test_short () {
            $.noty ( "Short noty" );
        }
        function noty_test_medium () {
            $.noty ( "A medium noty, maybe some useful infos here" );
        }
        function noty_test_long () {
            $.noty ( "A very looooooooooong noty, maybe some tips here or whatever takes a long space, how does it fit?" );
        }
        function noty_test_btns_one () {
            $.noty ( { body: "Noty with one button", buttons: [{ text: "Foo" }] } );
        }
        function noty_test_btns_two () {
            $.noty ( { body: "Noty with two buttons", buttons: [{ text: "Foo" }, { text: "Bar" }] } );
        }
        function noty_test_btns_three () {
            $.noty ( { body: "Noty with three buttons", buttons: [{ text: "Foo" }, { text: "Bar" }, { text: "Baz" }] } );
        }
        function noty_test_adv_one () {
            $.noty ( { title: "Test title", body: "This is just an example body" } );
        }
        function noty_test_adv_two () {
            $.noty ( { title: "Test title", body: "This is just an example body", img: "/assets/images/presto/sample.png" } );
        }
        function noty_test_adv_three () {
            $.noty ( { title: "Test title", body: "This is just an example body", img: "/assets/images/presto/sample.png", buttons: [{ text: "Foo" }, { text: "Bar" }] } );
        }
        function noty_test_adv_four () {
            $.noty ( { title: "Test title", body: "<sub>sub</sub>Something<sup>sup</sup>", img: "/assets/images/presto/sample.png", buttons: [{ text: "Foo" }, { text: "Bar" }] } );
        }
        function noty_test_colored ( color ) {
            $.noty ( { body: "Noty with custom color", color: color } );
        }
        var anchor_id = 0;
        function noty_test_anchor ( anchor ) {
            $.noty( { body: "Noty[" + ( anchor_id += 1 ) + "] in anchor: `" + anchor + "`", anchor: anchor } );
        }
        var created_noty;
        function noty_test_api_create () {
            created_noty = $.noty('API noty');
            created_noty.close();
        }
        function noty_test_api_open () {
            created_noty.open ();
        }
        function noty_test_api_close () {
            created_noty.close ();
        }
