//- javascript/expander.jade

extends ../../layout.jade

append main
    +divider Expander

    +expander
        +container-header("Base").actionable
            +multiple-right
                +button-icon("hardware-keyboard-arrow-down").xxsmall
        +container-content Content of base

    +expander
        +container-header.actionable
            +multiple-left
                p Base left
            +multiple-right
                +button-icon("hardware-keyboard-arrow-down").xxsmall
        +container-content Content of base left

    +expander
        +container-header("Icon to the left").actionable
            +multiple-left
                +button-icon("hardware-keyboard-arrow-down").xxsmall
        +container-content Content of icon to the left

    +expander.opened
        +container-header("Opened").actionable
            +multiple-right
                +button-icon("hardware-keyboard-arrow-down").xxsmall
        +container-content Content of opened
