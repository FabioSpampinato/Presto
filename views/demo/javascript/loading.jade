//- javascript/loading.jade

extends ../../layout.jade

append body
    +divider Paragraph

    +container
        p
            +lorem-ipsum

    +divider Action

    +button.actionable.outlined(onclick="loading_test()") Toggle loading

append body-end
    +script.
        var loading = false;
        function loading_test () {
            loading = !loading;
            $("p").parent ().loading ( loading );
        }
