//- css/table.jade

extends ../../layout.jade

append main
    +divider Default

    +container-simple
        table
            thead
                tr
                    th Int
                    th String
                    th Date
                    th Options
            tfoot

            tbody
                +table-tr-empty
                - var nr = 1;
                while ( nr <= 5 )
                    tr
                        td= nr++
                        td Foo
                        td 16/11/1993
                        td
                            .multiple
                                +button-simple.outlined.xsmall Btn 1
                                +button-simple.outlined.xsmall Btn 2
                    tr
                        td= nr++
                        td Bar
                        td 16 Nov 1993
