    +container-simple.outlined
        table.table
            thead
                tr
                    th Int
                    th String
                    th Date
                    th Options
            tfoot
            tbody
                +table-tr-empty
                - var nr = 1;
                while ( nr <= 5 )
                    tr
                        td= nr++
                        td Foo
                        td 16/11/1993
                        td
                            +multiple.centered
                                +button-simple.outlined.small Btn 1
                                +button-simple.outlined.small Btn 2
                    tr
                        td= nr++
                        td Bar
