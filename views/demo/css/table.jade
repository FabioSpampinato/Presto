//- css/table.jade

extends ../../layout.jade

append content
+divider Table
    .grid
        .grid_cols.fluid.limited
            .grid_col
                .container
                    table.sortable.selectable
                        thead
                            tr
                                th(data-sort="int") Int
                                th(data-sort="string") String
                                th Date
                                th Options
                        tfoot

                        tbody
                            tr.empty
                                td(colspan="100%") Empty row
                            - var nr = 0;
                            while ( nr < 100 )
                                tr
                                    td= nr++
                                    td Foo
                                    td 16/11/1993
                                    td
                                        .multiple
                                            a.button.actionable.outlined.tiny(href="#") Btn 1
                                            a.button.actionable.outlined.tiny(href="#") Btn 2
                                tr
                                    td= nr++
                                    td Bar
                                    td 16 Nov 1993
                                    td
                                        .multiple
                                            a.button.actionable.outlined.tiny(href="#") Btn 1
                                            a.button.actionable.outlined.tiny(href="#") Btn 2
