//- css/multiple_subs.jade

extends ../../layout.jade

append main
    +divider Normal

    +container-simple.outlined
        +multiple
            +multiple-left
                p Left
            +multiple-center
                p Center
            +multiple-right
                p Right

    +divider No left

    +container-simple.outlined
        +multiple
            +multiple-center
                p Center
            +multiple-right
                p Right

    +divider No center

    +container-simple.outlined
        +multiple
            +multiple-left
                p Left
            +multiple-right
                p Right

    +divider No right

    +container-simple.outlined
        +multiple
            +multiple-left
                p Left
            +multiple-center
                p Center

    +divider Only left

    +container-simple.outlined
        +multiple
            +multiple-left
                p Left

    +divider Only center

    +container-simple.outlined
        +multiple
            +multiple-center
                p Center

    +divider Only right

    +container-simple.outlined
        +multiple
            +multiple-right
                p Right

    +divider Advanced

    +container-simple.outlined
        +multiple
            +multiple-left
                +button-icon('thumb_down')
                +button-icon('thumb_up')
            +multiple-center
                p.large Title
            +multiple-right
                +button-icon('apps')
                +button-icon('menu')
                +button-icon('more_vert')
                +button-icon('refresh')
