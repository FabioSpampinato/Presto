//- bootstrap/syntax.jade

extends ../layout.jade

append content
    .separator_wrp
        .separator HTML
    .grid
        .grid_cols.limited
            .grid_col
                .container
                    code.language-markup.
                        &lt;div class="separator_wrp"&gt;
                            &lt;div class="separator"&gt;HTML&lt;/div&gt;
                        &lt;/div&gt;
                        &lt;div class="grid"&gt;
                            &lt;div class="grid_cols limited"&gt;
                                &lt;div class="grid_col"&gt;
                                    &lt;div class="container"&gt;
                                        Something
                                    &lt;/div&gt;
                                &lt;/div&gt;
                            &lt;/div&gt;
                        &lt;/div&gt;

    .separator_wrp
        .separator CSS
    .grid
        .grid_cols.limited
            .grid_col
                .container
                    code.language-css.
                        .sections_wrp {
                            margin: 0 -5px;
                            font-size: 0px;
                        }

                        .section {
                            padding: 0 5px;
                            margin-bottom: 10px;
                            box-sizing: border-box;
                        }

    .separator_wrp
        .separator Javascript
    .grid
        .grid_cols.limited
            .grid_col
                .container
                    code.language-javascript.
                        /* PlayKO */

                        window.playko = {
                            user: {
                                id: cookie.read ( 'user_id' ),
                                nickname: cookie.read ( 'nickname' )
                            }
                        };
