//- ripple.jade

extends ../../layout.jade

append content
    +divider Ripple

    +multiple.ripples-btns
        +button.ripple.ripple-primary Primary
        +button.ripple.ripple-secondary Secondary
        +button.ripple.ripple-tertiary Tertiary
        +button.ripple.ripple-quaternary Quaternary
        +button.ripple.ripple-white White
        +button.ripple.ripple-gray Gray
        +button.ripple.ripple-black Black
        +button.ripple.ripple-yellow Yellow
        +button.ripple.ripple-olive Olive
        +button.ripple.ripple-green Green
        +button.ripple.ripple-blue Blue
        +button.ripple.ripple-violet Violet
        +button.ripple.ripple-orange Orange
        +button.ripple.ripple-purple Purple
        +button.ripple.ripple-red Red
        +button.ripple.ripple-pink Pink
        +button.ripple.ripple-teal Teal
        +button.ripple.ripple-brown Brown

    +divider Other shapes

    +multiple
        +button.rounded.ripple.ripple-primary Test
        +button.compact.ripple.ripple-secondary
            +icon("action-settings")
        +button.compact.rounded.ripple.ripple-tertiary
            +icon("action-settings")
        +button.compact.transparent.rounded.ripple.ripple-tertiary
            +icon("action-settings")
        +button.sharp.ripple.ripple-quaternary Test

    +divider Centered

    +multiple
        +button.rounded.ripple.ripple-primary.ripple-centered Test
        +button.compact.ripple.ripple-secondary.ripple-centered
            +icon("action-settings")
        +button.compact.rounded.ripple.ripple-tertiary.ripple-centered
            +icon("action-settings")
        +button.compact.transparent.rounded.ripple.ripple-tertiary.ripple-centered
            +icon("action-settings")
        +button.sharp.ripple.ripple-quaternary.ripple-centered Test

    +divider Images

    +multiple
        +image-sample.ripple.rounded
        +image-sample.ripple.ripple-centered.rounded
        +image-sample.ripple.ripple-white

    +divider Paragraph

    +container.ripple.ripple-tertiary
        +lorem-ipsum

append body-end
    script.
        $('.ripples-btns .button').css ({
            width: 140,
            height: 80
        });
