//- ripple.jade

extends ../../layout.jade

append content
    +divider Ripple

    +multiple.ripples-btns
        +button.waves-effect.waves-primary Primary
        +button.waves-effect.waves-secondary Secondary
        +button.waves-effect.waves-tertiary Tertiary
        +button.waves-effect.waves-quaternary Quaternary
        +button.waves-effect.waves-white White
        +button.waves-effect.waves-gray Gray
        +button.waves-effect.waves-black Black
        +button.waves-effect.waves-yellow Yellow
        +button.waves-effect.waves-olive Olive
        +button.waves-effect.waves-green Green
        +button.waves-effect.waves-blue Blue
        +button.waves-effect.waves-violet Violet
        +button.waves-effect.waves-orange Orange
        +button.waves-effect.waves-purple Purple
        +button.waves-effect.waves-red Red
        +button.waves-effect.waves-pink Pink
        +button.waves-effect.waves-teal Teal
        +button.waves-effect.waves-brown Brown

    +divider Other shapes

    +multiple
        +button.rounded.waves-effect.waves-primary Test
        +button.compact.waves-effect.waves-secondary
            +icon("action-settings")
        +button.compact.rounded.waves-effect.waves-tertiary
            +icon("action-settings")
        +button.compact.transparent.rounded.waves-effect.waves-tertiary
            +icon("action-settings")
        +button.sharp.waves-effect.waves-quaternary Test

    +divider Centered

    +multiple
        +button.rounded.waves-effect.waves-primary.waves-centered Test
        +button.compact.waves-effect.waves-secondary.waves-centered
            +icon("action-settings")
        +button.compact.rounded.waves-effect.waves-tertiary.waves-centered
            +icon("action-settings")
        +button.compact.transparent.rounded.waves-effect.waves-tertiary.waves-centered
            +icon("action-settings")
        +button.sharp.waves-effect.waves-quaternary.waves-centered Test

    +divider Images

    +multiple
        +image-sample.waves-effect.rounded
        +image-sample.waves-effect.waves-centered.rounded
        +image-sample.waves-effect.waves-white

    +divider Paragraph

    +container.waves-effect.waves-tertiary
        +lorem-ipsum

append body-end
    script.
        $('.ripples-btns .button').css ({
            width: 140,
            height: 80
        });
