//- css/helpers.jade

extends ../../layout.jade

append main
    +divider Blur

    +container-simple
        +square-sample.blurred

    +divider Border

    +container-simple
        +multiple
            +square-sample.no-border
            +square-sample.rounded
            +square-sample.smooth
            +square-sample.sharp

    +divider Display

    +container-simple
        +multiple
            +square-sample.show
            +square-sample.hidden

    +divider Visibility

    +container-simple
        +multiple
            +square-sample.visible
            +square-sample.invisible

    +divider Float

    +container-simple
        +multiple
            +square-sample.left
            +square-sample.right

    +divider Text alignment

    +container-simple
        +multiple
            +square-sample.text-left
            +square-sample.text-center
            +square-sample.text-right

    +divider Text transformation

    +container-simple
        +multiple
            +square-sample.text-lowercase
            +square-sample.text-uppercase
            +square-sample.text-capitalize

    +divider Padding

    +container-simple
        +multiple
            +square-sample.no-padding
            +square-sample.no-padding-top
            +square-sample.no-padding-right
            +square-sample.no-padding-bottom
            +square-sample.no-padding-left

    +divider Margin

    +container-simple
        +multiple
            +square-sample.no-margin
            +square-sample.no-margin-top
            +square-sample.no-margin-right
            +square-sample.no-margin-bottom
            +square-sample.no-margin-left

    +divider Overflow

    +container-simple
        +multiple
            +square-sample.overflow-visible
            +square-sample.overflow-hidden

    +divider Flip

    +container-simple
        +multiple
            +square-sample.flipX
            +square-sample.flipY
            +square-sample.flip

    +divider Rotate

    +container-simple
        +multiple
            +square-sample.rotate-left
            +square-sample.rotate-right
            +square-sample.rotating

    +divider Other

    +container-simple
        +multiple
            .centered(style="width: 100px; height: 100px;").base
                +square-sample
            .spacer.base Spacer
