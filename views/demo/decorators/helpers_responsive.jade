//- helpers_responsive.jade

extends ../../layout.jade

append main
    +divider Visible on...

    +multiple.fluid
        div
            +simple-container.hidden-xs.visible-sm-block X-Small
            +simple-container.green.hidden-sm X-Small
        div
            +simple-container.hidden-sm.visible-md-block Small
            +simple-container.green.hidden-xs.visible-sm-block.hidden-md Small
        div
            +simple-container.hidden-md.visible-lg-block Medium
            +simple-container.green.hidden-xs.visible-md-block.hidden-lg Medium
        div
            +simple-container.hidden-lg.visible-xl-block Large
            +simple-container.green.hidden-xs.visible-lg-block.hidden-xl Large
        div
            +simple-container.hidden-xl X-Large
            +simple-container.green.hidden-xs.visible-xl-block X-Large

    +divider Visible on...

    +multiple.fluid.nowrap
        +multiple.vertical.fluid
            div
                +simple-container.hidden-xs.visible-md-block X-Small and Small
                +simple-container.green.hidden-md X-Small and Small
            div
                +simple-container.hidden-xs.visible-sm-block.hidden-md.visible-lg-block X-Small and Medium
                +simple-container.green.hidden-sm.visible-md-block.hidden-lg X-Small and Medium
            div
                +simple-container.hidden-xs.visible-sm-block.hidden-lg.visible-xl-block X-Small and Large
                +simple-container.green.hidden-sm.visible-lg-block.hidden-xl X-Small and Large
            div
                +simple-container.hidden-xs.visible-sm-block.hidden-xl X-Small and X-Large
                +simple-container.green.hidden-sm.visible-xl-block X-Small and X-Large
        +multiple.vertical.fluid
            div
                +simple-container.hidden-sm.visible-lg-block Small and Medium
                +simple-container.green.hidden-xs.visible-sm-block.hidden-lg Small and Medium
            div
                +simple-container.hidden-sm.visible-md-block.hidden-lg.visible-xl-block Small and Large
                +simple-container.green.hidden-xs.visible-sm-block.hidden-md.visible-lg-block.hidden-xl Small and Large
            div
                +simple-container.hidden-sm.visible-md-block.hidden-xl Small and X-Large
                +simple-container.green.hidden-xs.visible-sm-block.hidden-md.visible-xl-block Small and X-Large
        +multiple.vertical.fluid
            div
                +simple-container.hidden-md.visible-xl-block Medium and Large
                +simple-container.green.hidden-xs.visible-md-block.hidden-xl Medium and Large
            div
                +simple-container.hidden-md.visible-lg-block.hidden-xl Medium and X-Large
                +simple-container.green.hidden-xs.visible-md-block.hidden-lg.visible-xl-block Medium and X-Large
        +multiple.vertical.fluid
            div
                +simple-container.hidden-lg Large and X-Large
                +simple-container.green.hidden-xs.visible-lg-block Large and X-Large
