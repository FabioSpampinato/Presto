    +multiple.vertical.height-lg
        +container.height-7-in-12 1
        +container.height-7-in-12 2
        +container.height-7-in-12 3
        +container.height-7-in-12 4
        +container.height-7-in-12 5
        +container.height-7-in-12 6
        +container.height-7-in-12 7

