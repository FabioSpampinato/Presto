    +container.width-xs X-Small
    +container.width-sm Small
    +container.width-md Medium
    +container.width-lg Large
    +container.width-xl X-Large

    +divider Standard heights

    +multiple.fluid
        +container.height-xs X-Small
        +container.height-sm Small
        +container.height-md Medium
        +container.height-lg Large
        +container.height-xl X-Large

    +divider Width N in M (Grid columns number)

    +row
        +column.width-7-in-12
            +container 1
        +column.width-7-in-12
            +container 2
        +column.width-7-in-12
            +container 3
        +column.width-7-in-12
            +container 4
        +column.width-7-in-12
            +container 5
        +column.width-7-in-12
            +container 6
        +column.width-7-in-12
            +container 7

