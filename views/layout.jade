include mixins/presto/all.jade

+html
    +head("Presto")
    +body.fixed-header
        header
            +header
                +toolbar.primary.z-depth-4
                    +button-icon("navigation-menu")
                    a.xlarge(href="/") Presto
                    .spacer
                    +button-icon("navigation-refresh")
