        +button-simple("/views/demo/decorators/outline.html").outlined.teal Outline
        +button-simple("/views/demo/decorators/helpers_responsive.html").outlined Responsive Helpers
        +button-simple("/views/demo/decorators/ripple.html").outlined Ripple
        +button-simple("/views/demo/decorators/sizes.html").outlined Sizes

    +divider CSS

    +multiple
        +button-simple("/views/demo/css/container.html").outlined Container
        +button-simple("/views/demo/css/elements.html").outlined Elements
        +button-simple("/views/demo/css/flags.html").outlined Flags
        +button-simple("/views/demo/css/form.html").outlined.teal Form
        +button-simple("/views/demo/css/grid.html").outlined Grid
