extends views/layout.jade

append body
    +divider CSS

    +multiple
        +button("/views/demo/css/colors.html").outlined Colors
        +button("/views/demo/css/container.html").outlined Container
        +button("/views/demo/css/elements.html").outlined Elements
        +button("/views/demo/css/flags.html").outlined Flags
        +button("/views/demo/css/form.html").outlined.teal Form
        +button("/views/demo/css/grid.html").outlined Grid
        +button("/views/demo/css/helpers.html").outlined Helpers
        +button("/views/demo/css/helpers_responsive.html").outlined Responsive helpers
        +button("/views/demo/css/icons.html").outlined Icons
        +button("/views/demo/css/multiple.html").outlined Multiple
        +button("/views/demo/css/shadows.html").outlined Shadows
        +button("/views/demo/css/sizes.html").outlined Sizes
        +button("/views/demo/css/table.html").outlined Table
        +button("/views/demo/css/typography.html").outlined Typography

    +divider Components

    +multiple
        +button("/views/demo/components/advertisement.html").outlined Advertisement
        +button("/views/demo/components/badges.html").outlined.teal Badges
        +button("/views/demo/components/breadcrumb.html").outlined Breadcrumb
        +button("/views/demo/components/button.html").outlined Button
        +button("/views/demo/components/chat.html").outlined Chat
        +button("/views/demo/components/divider.html").outlined Divider
        +button("/views/demo/components/header.html").outlined Header
        +button("/views/demo/components/inputs.html").outlined.teal Inputs
        +button("/views/demo/components/navbar.html").outlined.teal Navbar
        +button("/views/demo/components/progressBar.html").outlined progressBar
        +button("/views/demo/components/shapes.html").outlined Shapes
        +button("/views/demo/components/toolbar.html").outlined.teal Toolbar

    +divider Javascript

    +multiple
        +button("/views/demo/javascript/accordion.html").outlined Accordion
        +button("/views/demo/javascript/checkbox.html").outlined Checkbox
        +button("/views/demo/javascript/dropdown.html").outlined.teal Dropdown
        +button("/views/demo/javascript/expander.html").outlined Expander
        +button("/views/demo/javascript/loading.html").outlined Loading
        +button("/views/demo/javascript/menu.html").outlined.teal Menu
        +button("/views/demo/javascript/modal.html").outlined Modal
        +button("/views/demo/javascript/noty.html").outlined Noty
        +button("/views/demo/javascript/radio.html").outlined Radio
        +button("/views/demo/javascript/select.html").outlined.teal Select
        +button("/views/demo/javascript/sidebar.html").outlined.teal Sidebar
        +button("/views/demo/javascript/slider.html").outlined Slider
        +button("/views/demo/javascript/spinner.html").outlined Spinner
        +button("/views/demo/javascript/switcher.html").outlined Switcher
        +button("/views/demo/javascript/syntax.html").outlined Syntax
        +button("/views/demo/javascript/tabs.html").outlined Tabs
        +button("/views/demo/javascript/tagbox.html").outlined Tagbox

    +divider Tools

    +multiple
        +button("/views/demo/tools/autogrow.html").outlined Autogrow
        +button("/views/demo/tools/blurred.html").outlined Blurred
        +button("/views/demo/tools/btEach.html").outlined btEach
        +button("/views/demo/tools/formAjax.html").outlined.teal formAjax
        +button("/views/demo/tools/formSync.html").outlined.teal formSync
        +button("/views/demo/tools/notification.html").outlined Notification
        +button("/views/demo/tools/oneTimeAction.html").outlined oneTimeAction
        +button("/views/demo/tools/selectable.html").outlined Selectable
        +button("/views/demo/tools/sortable.html").outlined Sortable
        +button("/views/demo/tools/timeAgo.html").outlined timeAgo
        +button("/views/demo/tools/toggleHeight.html").outlined.red toggleHeight
        +button("/views/demo/tools/touching.html").outlined Touching

    +divider Responses

    +multiple
        +button("/views/responses/400.html").outlined 400
        +button("/views/responses/403.html").outlined 403
        +button("/views/responses/404.html").outlined 404
        +button("/views/responses/500.html").outlined 500

append body-end
    +noty({ body: '<p>[Green] To update <br/> [Teal] ToDo <br/> [Blue] Make it better <br/> [Red] Problematic</p>', ttl: 'forever' })
