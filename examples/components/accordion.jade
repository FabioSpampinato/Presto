
extends ../layout.jade

//- Accordion

append main
  +divider Accordion

  +accordion
    +expander.outlined
      +container-header("Section 1").actionable.expander-toggler.outlined
        +multiple-right
          +button-icon("keyboard_arrow_down").xsmall.compact
      +container-content
        +paragraph-sample
    +expander.opened.outlined
      +container-header.outlined
        +multiple-left
          p Section 2 - Button toggler
        +multiple-right
          +button-icon("keyboard_arrow_down").xsmall.expander-toggler.compact
      +container-content
        +paragraph-sample
    +expander.outlined
      +container-header("Section 3").actionable.expander-toggler.outlined
        +multiple-left
          +button-icon("keyboard_arrow_down").xsmall.compact
      +container-content
        +paragraph-sample
    +expander.outlined
      +container-header("Section 4").actionable.expander-toggler.outlined
        +multiple-right
          +button-icon("keyboard_arrow_down").xsmall.compact
      +container-content
        +paragraph-sample

  +divider Accordion - Multiple

  +accordion.multiple
    +expander.outlined
      +container-header("Section 1").actionable.expander-toggler.outlined
        +multiple-right
          +button-icon("keyboard_arrow_down").xsmall.compact
      +container-content
        +paragraph-sample
    +expander.opened.outlined
      +container-header.outlined
        +multiple-left
          p Section 2 - Button toggler
        +multiple-right
          +button-icon("keyboard_arrow_down").xsmall.expander-toggler.compact
      +container-content
        +paragraph-sample
    +expander.outlined
      +container-header("Section 3").actionable.expander-toggler.outlined
        +multiple-left
          +button-icon("keyboard_arrow_down").xsmall.compact
      +container-content
        +paragraph-sample
    +expander.outlined
      +container-header("Section 4").actionable.expander-toggler.outlined
        +multiple-right
          +button-icon("keyboard_arrow_down").xsmall.compact
      +container-content
        +paragraph-sample

  +divider Actions

  +multiple
    +button("accordions_action ( 'toggleAll' )").outlined Toggle all
    +button("accordions_action ( 'openAll' )").outlined Open all
    +button("accordions_action ( 'closeAll' )").outlined Close all

append body-end
  +script.
    function accordions_action ( action ) {
      $('.accordion').accordion ( action );
    }
