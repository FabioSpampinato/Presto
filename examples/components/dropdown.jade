
extends ../layout.jade

//- Dropdown

//- TODO: Maybe add +divider-spacer when appropriate (when there are only buttons for example)

append main
  +divider Dropdown

  +multiple
    +dropdown-btn({ title: "Base", id: "base" }).outlined
    +dropdown-btn({ title: "Attached", id: "attached" }).outlined
    +dropdown-btn({ title: "No tip", id: "notip" }).outlined
    +dropdown-btn({ icon: "settings", id: "base" }).outlined
    +dropdown-btn({ icon: "settings", id: "base" }).rounded.outlined
    +dropdown-btn({ title: "Dividers", id: "dividers" }).outlined
    +dropdown-btn({ title: "Advanced", id: "advanced" }).outlined
    +dropdown-btn({ title: "Long text", id: "long_text" }).outlined
    +dropdown-btn({ title: "Long text 2", id: "long_text2" }).outlined

append body
    +dropdown("base")
      +container-content
        +multiple.vertical.stretched.nowrap.joined
          +button-simple.sharp Action 1
          +button-simple.sharp Action 2
          +button-simple.sharp Action 3
          +button-simple.sharp Action 312313
    +dropdown("attached").attached
      +container-content
        p Attached
    +dropdown("notip").no-tip
      +container-content
        p No tip
    +dropdown("dividers")
      +container-content
        +multiple.vertical.stretched.nowrap
          +button-simple.sharp Action 1
          +divider Divider
          +button-simple.sharp Action 2
          +divider-linear Divider
          +button-simple.sharp Action 3
          +divider-linear
          +button-simple.sharp Action 4
          +divider-linear
          +divider-text Section
          +button-simple.sharp Action 5
    +dropdown("advanced")
      +container-header("Header").inherit
      +container-content Content
      +container-footer Footer
    +dropdown("long_text")
      +container-header("Lorem ipsum").inherit
      +container-content
        +lorem-ipsum
      +container-footer Footer
    +dropdown("long_text2")
      +container-header("Lorem ipsum 2").inherit
      +container-content
        +lorem-ipsum
        +lorem-ipsum
        +lorem-ipsum
      +container-footer Footer
