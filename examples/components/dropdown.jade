
extends ../layout.jade

//- Dropdown

//- TODO: Maybe add +divider-block -spacer when appropriate (when there are only buttons for example)

append main
  +divider-block Dropdown

  +multiple
    +dropdown-btn({ title: "Base", id: "base" }).outlined
    +dropdown-btn({ title: "Attached", id: "attached" }).outlined
    +dropdown-btn({ title: "No tip", id: "no-tip" }).outlined
    +dropdown-btn({ icon: "settings", id: "base" }).outlined.compact
    +dropdown-btn({ icon: "settings", id: "base" }).rounded.outlined.compact
    +dropdown-btn({ title: "Dividers", id: "dividers" }).outlined
    +dropdown-btn({ title: "Advanced", id: "advanced" }).outlined
    +dropdown-btn({ title: "Long text", id: "long_text" }).outlined
    +dropdown-btn({ title: "Long text 2", id: "long_text2" }).outlined

append body
  #base.dropdown.container
    +multiple.vertical.stretched.nowrap.joined
      +button.sharp Action 1
      +button.sharp Action 2
      +button.sharp Action 3
      +button.sharp Action 312313
          
  #attached.dropdown.attached.container
    p Attached
        
  #no-tip.dropdown.no-tip.container
    p No tip
      
  #dividers.dropdown.container
    +multiple.vertical.stretched.nowrap
      +button.sharp Action 1
      +divider-block Divider
      +button.sharp Action 2
      +divider-block -linear Divider
      +button.sharp Action 3
      +divider-block -linear
      +button.sharp Action 4
      +divider-block -linear
      +divider-block -text Section
      +button.sharp Action 5
      
  #advanced.dropdown.card
    +card-header.inherit Header
    +card-block Content
    +card-footer Footer
    
  #long_text.dropdown.card
    +card-header.inherit Lorem Ipsum
    +card-block
      +lorem-ipsum
    +card-footer Footer
      
  #long_text2.dropdown.card
    +card-header.inherit Lorem Ipsum 2
    +card-block
      +lorem-ipsum
      +lorem-ipsum
      +lorem-ipsum
    +card-footer Footer
