
extends ../layout.jade

//- Datepicker

append main
  +divider-block Datepicker

  +container.outlined
    +datepicker(id="datepicker_test")

  +divider-block Actions

  +multiple
    +multiple.joined
      +checkbox({ name: "datepicker_get_formatted", title: "Formatted", value: 1 }).outlined
      +button("datepicker_get ()").primary.outlined Get
    +multiple.joined
      +input({ name: "datepicker_delta_months", label: "Delta months..." }).no-floating.white.text-field-secondary.outlined
      +button("datepicker_navigate ()").secondary.outlined Navigate
    +multiple.joined
      +button-icon("chevron_left", "datepicker_navigate_prev ()").compact.outlined
      +label.outlined Month
      +button-icon("chevron_right", "datepicker_navigate_next ()").compact.outlined

append body-end
  +script.
    function datepicker_get () {
      var formatted = $("input[name='datepicker_get_formatted']").prop ( 'checked' );
      var date = $('.datepicker').datepicker ( 'get', formatted );
      $.noty ( date ? ( formatted ? date : date.toLocaleString () ) : 'Null' );
    }

    function datepicker_navigate () {
      var delta_months = Number($("input[name='datepicker_delta_months']").val ());
      $('.datepicker').datepicker ( 'navigateMonth', delta_months );
    }

    function datepicker_navigate_prev () {
      $('.datepicker').datepicker ( 'prevMonth' );
    }

    function datepicker_navigate_next () {
      $('.datepicker').datepicker ( 'nextMonth' );
    }
