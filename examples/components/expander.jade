
extends ../layout.jade

//- Expander

append main
  +divider-block Expander

  +expander.outlined
    +card-header("Base").actionable.expander-toggler.outlined
      +multiple-sub-right
        +button-icon("keyboard_arrow_down").small.compact
    +card-block Content of base

  +expander.outlined
    +card-header.outlined
      +multiple-sub-left
        p Base left - Button toggler
      +multiple-sub-right
        +button-icon("keyboard_arrow_down").small.expander-toggler.compact
    +card-block Content of base left - Button toggler

  +expander.outlined
    +card-header("Icon to the left").actionable.expander-toggler.outlined
      +multiple-sub-left
        +button-icon("keyboard_arrow_down").small.compact
    +card-block Content of icon to the left

  +expander.opened.outlined
    +card-header("Opened").actionable.expander-toggler.outlined
      +multiple-sub-right
        +button-icon("keyboard_arrow_down").small.compact
    +card-block Content of opened

  +divider-block Actions

  +multiple
    +button("accordions_action ( 'toggle' )").outlined Toggle all
    +button("accordions_action ( 'open' )").outlined Open all
    +button("accordions_action ( 'close' )").outlined Close all

append body-end
  +script.
    function accordions_action ( action ) {
      $('.accordion').accordion ( action );
    }  
