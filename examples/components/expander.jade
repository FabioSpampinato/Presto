
extends ../layout.jade

//- Expander

append main
  +divider Expander

  +expander
    +container-header("Base").actionable.expander-toggler
      +multiple-right
        +button-icon("keyboard_arrow_down").small
    +container-content Content of base

  +expander
    +container-header
      +multiple-left
        p Base left - Button toggler
      +multiple-right
        +button-icon("keyboard_arrow_down").small.expander-toggler
    +container-content Content of base left - Button toggler

  +expander
    +container-header("Icon to the left").actionable.expander-toggler
      +multiple-left
        +button-icon("keyboard_arrow_down").small
    +container-content Content of icon to the left

  +expander.opened
    +container-header("Opened").actionable.expander-toggler
      +multiple-right
        +button-icon("keyboard_arrow_down").small
    +container-content Content of opened

  +divider Actions

  +multiple
    +button-simple("accordions_action ( 'toggle' )") Toggle all
    +button-simple("accordions_action ( 'open' )") Open all
    +button-simple("accordions_action ( 'close' )") Close all

append body-end
  +script.
    function accordions_action ( action ) {
      $('.accordion').accordion ( action );
    }  
