
extends ../layout.jade

//- Flippable

append main
  +divider-block Horizontal

  +flippable.text-center
    +flippable-front
      +container.outlined.red
        p Front
        +button.flippable-trigger Flip
    +flippable-back
      +container.outlined.blue
        p Back
        +button.flippable-trigger Flip

  +divider-block Vertical

  +flippable.vertical.text-center
    +flippable-front
      +container.outlined.red
        p Front
        +button.flippable-trigger Flip
    +flippable-back
      +container.outlined.blue
        p Back
        +button.flippable-trigger Flip

  +divider-block Actions

  +multiple.actions
    +button("set_size ( 100, 100 )").outlined 100x100
    +button("set_size ( 200, 200 )").outlined 200x200
    +button("set_size ( 300, 300 )").outlined 300x300
    +button("set_size ( 250, 200 )").outlined 250x200
    +button("set_size ( 400, 200 )").outlined 400x200
    +button("set_size ( 600, 200 )").outlined 600x200
    +button("set_size ( 200, 400 )").outlined 200x400
    +button("set_size ( 'auto', 'auto' )").outlined Auto
    +button("flippable_api ( 'flip' )").outlined Flip
    +button("flippable_api ( 'front' )").outlined Front
    +button("flippable_api ( 'back' )").outlined Back
    
append body-end
  script.
    function flippable_api ( action ) {
      $('.flippable').flippable ( action );
    }
    function set_size ( width, height ) {
      $(".flippable").css ({
        width: width,
        height: height
      });
    }
    set_size ( 100, 100 );
