
extends ../layout.jade

//- Flippable

append main
  +divider-block Horizontal

  +flippable
    +flippable-front
      +container.red.outlined
        p Front
        +button.flipper Flip
    +flippable-back
      +container.blue.outlined
        p Back
        +button.flipper Flip

  +divider-block Vertical

  +flippable.vertical
    +flippable-front
      +container.red.outlined
        p Front
        +button.flipper Flip
    +flippable-back
      +container.blue.outlined
        p Back
        +button.flipper Flip

  +divider-block Actions

  +multiple
    +button("set_size ( 100, 100 )").outlined 100x100
    +button("set_size ( 200, 200 )").outlined 200x200
    +button("set_size ( 300, 300 )").outlined 300x300
    +button("set_size ( 250, 200 )").outlined 250x200
    +button("set_size ( 400, 200 )").outlined 400x200
    +button("set_size ( 600, 200 )").outlined 600x200
    +button("set_size ( 200, 400 )").outlined 200x400
    +button("set_size ( 'auto', 'auto' )").outlined Auto

append body-end
  script.
    function set_size ( width, height ) {
      $(".flippable-wrp").css ({
        width: width,
        height: height
      });
    }
