
extends ../layout.jade

//- Noty

append main
  +divider Text

  +multiple
    +button("noty_test_short ()").outlined Short
    +button("noty_test_medium ()").outlined Medium
    +button("noty_test_long ()").outlined Long

  +divider API calls

  +multiple
    +button("noty_test_api_create ()").outlined Create
    +button("noty_test_api_open ()").outlined Open
    +button("noty_test_api_close ()").outlined Close

  +divider Anchors

  +multiple
    +button("noty_test_anchor ({ y: 'top', x: 'left' })").outlined Top-Left
    +button("noty_test_anchor ({ y: 'top', x: 'center' })").outlined Top-Center
    +button("noty_test_anchor ({ y: 'top', x: 'expanded' })").outlined Top-Expanded
    +button("noty_test_anchor ({ y: 'top', x: 'right' })").outlined Top-Right
    +button("noty_test_anchor ({ y: 'bottom', x: 'left' })").outlined Bottom-Left
    +button("noty_test_anchor ({ y: 'bottom', x: 'center' })").outlined Bottom-Center
    +button("noty_test_anchor ({ y: 'bottom', x: 'expanded' })").outlined Bottom-Expanded
    +button("noty_test_anchor ({ y: 'bottom', x: 'right' })").outlined Bottom-Right

  +divider Buttons

  +multiple
    +button("noty_test_btns_one ()").outlined One
    +button("noty_test_btns_two ()").outlined Two
    +button("noty_test_btns_three ()").outlined Three

  +divider Advanced

  +multiple
    +button("noty_test_adv_one ()").outlined Title + Body
    +button("noty_test_adv_two ()").outlined Title + Body + Image
    +button("noty_test_adv_three ()").outlined Title + Body + Image + Buttons
    +button("noty_test_adv_four ()").outlined Title + Custom body + Image + Buttons

  +divider Colors

  +multiple
    +button.primary.outlined("noty_test_colored ( 'primary' )") Primary
    +button.secondary.outlined("noty_test_colored ( 'secondary' )") Secondary
    +button.tertiary.outlined("noty_test_colored ( 'tertiary' )") Tertiary
    +button.quaternary.outlined("noty_test_colored ( 'quaternary' )") Quaternary
    +button.white.outlined("noty_test_colored ( 'white' )") White
    +button.gray.outlined("noty_test_colored ( 'gray' )") Gray
    +button.black.outlined("noty_test_colored ( 'black' )") Black
    +button.yellow.outlined("noty_test_colored ( 'yellow' )") Yellow
    +button.olive.outlined("noty_test_colored ( 'olive' )") Olive
    +button.green.outlined("noty_test_colored ( 'green' )") Green
    +button.blue.outlined("noty_test_colored ( 'blue' )") Blue
    +button.violet.outlined("noty_test_colored ( 'violet' )") Violet
    +button.orange.outlined("noty_test_colored ( 'orange' )") Orange
    +button.purple.outlined("noty_test_colored ( 'purple' )") Purple
    +button.red.outlined("noty_test_colored ( 'red' )") Red
    +button.pink.outlined("noty_test_colored ( 'pink' )") Pink
    +button.teal.outlined("noty_test_colored ( 'teal' )") Teal
    +button.brown.outlined("noty_test_colored ( 'brown' )") Brown
    +button.transparent.outlined("noty_test_colored ( 'transparent' )") Transparent
    +button.inherit.outlined("noty_test_colored ( 'inherit' )") Inherit
    +button.base.outlined("noty_test_colored ( 'base' )") Base

append body-end
  +script.
    function noty_test_short () {
      $.noty ( "Short noty" );
    }
    function noty_test_medium () {
      $.noty ( "A medium noty, maybe some useful infos here" );
    }
    function noty_test_long () {
      $.noty ( "A very looooooooooong noty, maybe some tips here or whatever takes a long space, how does it fit?" );
    }
    function noty_test_btns_one () {
      $.noty ( { body: "Noty with one button", buttons: [{ text: "Foo" }] } );
    }
    function noty_test_btns_two () {
      $.noty ( { body: "Noty with two buttons", buttons: [{ text: "Foo" }, { text: "Bar" }] } );
    }
    function noty_test_btns_three () {
      $.noty ( { body: "Noty with three buttons", buttons: [{ text: "Foo" }, { text: "Bar" }, { text: "Baz" }] } );
    }
    function noty_test_adv_one () {
      $.noty ( { title: "Test title", body: "This is just an example body" } );
    }
    function noty_test_adv_two () {
      $.noty ( { title: "Test title", body: "This is just an example body", img: "/sample.png" } );
    }
    function noty_test_adv_three () {
      $.noty ( { title: "Test title", body: "This is just an example body", img: "/sample.png", buttons: [{ text: "Foo" }, { text: "Bar" }] } );
    }
    function noty_test_adv_four () {
      $.noty ( { title: "Test title", body: "<sub>sub</sub>Something<sup>sup</sup>", img: "/sample.png", buttons: [{ text: "Foo" }, { text: "Bar" }] } );
    }
    function noty_test_colored ( color ) {
      $.noty ( { body: "Noty with custom color", color: color } );
    }
    var anchor_id = 0;
    function noty_test_anchor ( anchor ) {
      $.noty( { body: "Noty[" + ( anchor_id += 1 ) + "] in anchor: { y: `" + anchor.y + "`, x: `" + anchor.x + "`", anchor: anchor } );
    }
    var created_noty;
    function noty_test_api_create () {
      created_noty = $.noty({ body: 'API noty', autoplay: false });
    }
    function noty_test_api_open () {
      if ( created_noty ) {
        created_noty.open ();
      } else {
        $.noty("You should `Create` it before...");
      }
    }
    function noty_test_api_close () {
      if ( created_noty ) {
        created_noty.close ();
      } else {
        $.noty("You should `Create` it before...");
      }
    }
