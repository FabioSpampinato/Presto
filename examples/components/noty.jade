
extends ../layout.jade

//- Noty

append main
  +divider-block Text

  +multiple
    +button("noty_short ()").outlined Short
    +button("noty_medium ()").outlined Medium
    +button("noty_long ()").outlined Long

  +divider-block API Calls

  +multiple
    +button("noty_api_create ()").outlined Create
    +button("noty_api_open ()").outlined Open
    +button("noty_api_close ()").outlined Close
    +button("noty_api_isOpen ()").outlined isOpen

  +divider-block Anchors

  +multiple
    +button("noty_anchor ({ y: 'top', x: 'left' })").outlined Top-Left
    +button("noty_anchor ({ y: 'top', x: 'center' })").outlined Top-Center
    +button("noty_anchor ({ y: 'top', x: 'expanded' })").outlined Top-Expanded
    +button("noty_anchor ({ y: 'top', x: 'right' })").outlined Top-Right
    +button("noty_anchor ({ y: 'bottom', x: 'left' })").outlined Bottom-Left
    +button("noty_anchor ({ y: 'bottom', x: 'center' })").outlined Bottom-Center
    +button("noty_anchor ({ y: 'bottom', x: 'expanded' })").outlined Bottom-Expanded
    +button("noty_anchor ({ y: 'bottom', x: 'right' })").outlined Bottom-Right

  +divider-block Buttons

  +multiple
    +button("noty_btns_one ()").outlined One
    +button("noty_btns_two ()").outlined Two
    +button("noty_btns_three ()").outlined Three

  +divider-block Advanced

  +multiple
    +button("noty_adv_one ()").outlined Title + Body
    +button("noty_adv_two ()").outlined Title + Body + Image
    +button("noty_adv_three ()").outlined Title + Body + Image + Buttons
    +button("noty_adv_four ()").outlined Title + Custom body + Image + Buttons

  +divider-block Colors

  +multiple
    +button("noty_colored ( 'primary' )").outlined.primary Primary
    +button("noty_colored ( 'secondary' )").outlined.secondary Secondary
    +button("noty_colored ( 'tertiary' )").outlined.tertiary Tertiary
    +button("noty_colored ( 'quaternary' )").outlined.quaternary Quaternary
    +button("noty_colored ( 'white' )").outlined.white White
    +button("noty_colored ( 'gray' )").outlined.gray Gray
    +button("noty_colored ( 'black' )").outlined.black Black
    +button("noty_colored ( 'yellow' )").outlined.yellow Yellow
    +button("noty_colored ( 'olive' )").outlined.olive Olive
    +button("noty_colored ( 'green' )").outlined.green Green
    +button("noty_colored ( 'blue' )").outlined.blue Blue
    +button("noty_colored ( 'violet' )").outlined.violet Violet
    +button("noty_colored ( 'orange' )").outlined.orange Orange
    +button("noty_colored ( 'purple' )").outlined.purple Purple
    +button("noty_colored ( 'red' )").outlined.red Red
    +button("noty_colored ( 'pink' )").outlined.pink Pink
    +button("noty_colored ( 'teal' )").outlined.teal Teal
    +button("noty_colored ( 'brown' )").outlined.brown Brown
    +button("noty_colored ( 'transparent' )").outlined.transparent Transparent
    +button("noty_colored ( 'inherit' )").outlined.inherit Inherit
    +button("noty_colored ( 'base' )").outlined.base Base

append body-end
  +script.
    function noty_short () {
      $.noty ( "Short noty" );
    }
    function noty_medium () {
      $.noty ( "A medium noty, maybe some useful infos here" );
    }
    function noty_long () {
      $.noty ( "A very looooooooooong noty, maybe some tips here or whatever takes a long space, how does it fit?" );
    }
    function noty_btns_one () {
      $.noty ({ body: "Noty with one button", buttons: [{ text: "Foo" }] });
    }
    function noty_btns_two () {
      $.noty ({ body: "Noty with two buttons", buttons: [{ text: "Foo" }, { text: "Bar" }] });
    }
    function noty_btns_three () {
      $.noty ({ body: "Noty with three buttons", buttons: [{ text: "Foo" }, { text: "Bar" }, { text: "Baz" }] });
    }
    function noty_adv_one () {
      $.noty ({ title: "Test title", body: "This is just an example body" });
    }
    function noty_adv_two () {
      $.noty ({ title: "Test title", body: "This is just an example body", img: "/sample.png" });
    }
    function noty_adv_three () {
      $.noty ({ title: "Test title", body: "This is just an example body", img: "/sample.png", buttons: [{ text: "Foo" }, { text: "Bar" }] });
    }
    function noty_adv_four () {
      $.noty ({ title: "Test title", body: "<sub>sub</sub>Something<sup>sup</sup>", img: "/sample.png", buttons: [{ text: "Foo" }, { text: "Bar" }] });
    }
    function noty_colored ( color ) {
      $.noty ({ body: "Noty with custom color", color: color });
    }
    var anchor_id = 0;
    function noty_anchor ( anchor ) {
      $.noty({ body: "Noty[" + ( anchor_id += 1 ) + "] in anchor: { y: `" + anchor.y + "`, x: `" + anchor.x + "` }", anchor: anchor });
    }
    var created_noty;
    function noty_api_create () {
      created_noty = $.noty({ body: 'API noty', autoplay: false });
    }
    function noty_api_open () {
      if ( created_noty ) {
        created_noty.open ();
      } else {
        $.noty ( "You should `Create` it before..." );
      }
    }
    function noty_api_close () {
      if ( created_noty ) {
        created_noty.close ();
      } else {
        $.noty ( "You should `Create` it before..." );
      }
    }
    function noty_api_isOpen () {
      if ( created_noty ) {
        $.noty ( "" + created_noty.isOpen () );
      } else {
        $.noty ( "You should `Create` it before..." );
      }
    }
