
extends ../layout.jade

//- Card

append main
  +divider Card
  


  +divider With header

  +container("Header") Content

  +divider With advanced header

  +container
    +card-header.secondary
      +multiple-right
        p Right
      +multiple-left
        p Left
      +multiple-center
        p Center
    +card-block Content

  +divider With footer

  +container
    +card-block Content
    +card-footer.teal Footer

  +divider With header & footer

  +container
    +card-header("Header").green
    +card-block Content
    +card-footer Footer

  +divider With compact header & footer

  +container
    +card-header("Header").olive.compact
    +card-block Content
    +card-footer.compact Footer

  +divider Advanced

  +container(style="height: 250px;")
    +card-header("Header")
      +multiple-left
        +button-icon('thumb_down').xsmall.compact
        +button-icon("thumb_up").xsmall.compact
      +multiple-right
        +button-icon('apps').xsmall.compact
        +button-icon('menu').xsmall.compact
        +button-icon('more_vert').xsmall.compact
        +button-icon('refresh').xsmall.compact
    +card-block
      +paragraph-sample
      +paragraph-sample
    +card-footer.pink Footer

  +divider Actions

  +multiple
    +button("toggle_outline ( '.container' )").outlined Toggle container outlined
    +button("toggle_outline ( '.container-header' )").outlined Toggle header outlined
    +button("toggle_outline ( '.container-footer' )").outlined Toggle footer outlined

append body-end
  +script.
    function toggle_outline ( selector ) {
      $(selector).toggleClass ( 'outlined' );
    }
