
extends ../layout.jade

//- Checkbox

append main
  +divider-block Checkbox

  +multiple
    +checkbox({ name: "name", title: "Base", value: 4 }).outlined
    +checkbox({ name: "name", title: "Checked", value: 8, checked: true }).outlined
    +checkbox({ name: "name", title: "Disabled", value: 32, checked: true }).checkbox-disabled.outlined

  +divider-block Actions

  +multiple.actions
    +button("checkboxes_get_all ()").outlined Get all
    +button("checkboxes_action ( 'toggle' )").outlined Toggle all
    +button("checkboxes_action ( 'check' )").outlined Check all
    +button("checkboxes_action ( 'uncheck' )").outlined Uncheck all
    +button("toggle_class ( 'invalid' )").outlined Toggle Invalid
    +button("toggle_class ( 'valid' )").outlined Toggle valid

append body-end
  +script.
    function checkboxes_get_all () {
      var gets = _.map ( $('.checkbox'), function ( checkbox ) {
        return $(checkbox).checkbox ( 'get' );
      });
      $.noty ( gets.join ( ' - ' ) );
    }
    function checkboxes_action ( action ) {
      $('.checkbox').checkbox ( action );
    }
    function toggle_class ( css_class ) {
      $('.checkbox').toggleClass ( css_class );
    }
