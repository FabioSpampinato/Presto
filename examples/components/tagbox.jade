//- javascript/tagbox.jade

extends ../layout.jade

append main
    +divider Tagbox

    +container-simple
        +tagbox("name", "these,are,some,tags")

    +divider Actions

    +multiple
        +button-simple("tagbox_get()") Get
        +multiple.joined
            +input({name: "input_add", label: "Add tags..."}).no-floating.white.text-field-primary
            +button-simple("tagbox_add()").primary Add
        +multiple.joined
            +input({name: "input_remove", label: "Remove tags..."}).no-floating.white.text-field-secondary
            +button-simple("tagbox_remove()").secondary Remove
        +button-simple("tagbox_clear()").black Clear
        +button-simple("tagbox_reset()") Reset

append body-end
    +script.
        function tagbox_get () {
            $.noty ( $('.tagbox').tagbox ( 'get' ) );
        }
        function tagbox_add () {
            $('.tagbox').tagbox ( 'add', $('input[name="input_add"]').val () );
        }
        function tagbox_remove () {
            $('.tagbox').tagbox ( 'remove', $('input[name="input_remove"]').val () );
        }
        function tagbox_clear () {
            $('.tagbox').tagbox ( 'clear' )
        }
        function tagbox_reset () {
            $('.tagbox').tagbox ( 'reset' )
        }
