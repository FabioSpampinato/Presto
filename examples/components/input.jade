  +divider-block Normal

  +container.outlined
    +multiple
      +input({ placeholder: "Base" })
      +input({ placeholder: "Compact" }).compact.outlined
      +input({ placeholder: "Sharp" }).sharp.outlined
      +input({ placeholder: "Outlined" }).outlined
      +input({ placeholder: "Rounded" }).rounded.outlined
      +input({ placeholder: "Disabled" }).disabled

  +divider-block Colors

  +container.outlined
    +multiple
      +input({ placeholder: "Primary" }).primary
      +input({ placeholder: "Secondary" }).secondary
      +input({ placeholder: "Tertiary" }).tertiary
      +input({ placeholder: "Quaternary" }).quaternary
