  +divider Normal

  +container-simple
    +multiple
      +spinner.primary
      +spinner.secondary
      +spinner.tertiary
      +spinner.quaternary
      +spinner.white
      +spinner.gray
      +spinner.black
      +spinner.yellow
      +spinner.olive
      +spinner.green
      +spinner.blue
      +spinner.violet
