
extends ../layout.jade

//- Button

append main
  +divider-block Button
  
  +button Button
  
  +divider-block Fluid
  
  +button.fluid Fluid
  
  +divider-block Colors
  
  +multiple
    +button.primary Primary
    +button.secondary Secondary
    +button.tertiary Tertiary
    +button.quaternary Quaternary
    +button.white White
    +button.gray Gray
    +button.black Black
    +button.yellow Yellow
    +button.olive Olive
    +button.green Green
    +button.blue Blue
    +button.violet Violet
    +button.orange Orange
    +button.purple Purple
    +button.red Red
    +button.pink Pink
    +button.teal Teal
    +button.brown Brown
    +button.error Error
    +button.warning Warning
    +button.success Success
    +button.transparent Transparent
    +button.inherit Inherit
    +button.base Base

  +divider-block Advanced

  +multiple
    +button-icon('settings')
    +button-icon('settings').rounded
    +button
      +icon('settings')
      span Settings
    +button
      span Settings
      +icon('settings')
    +button
      +button-sub-left
        +icon('settings')
      span Settings
    +button
      span Settings
      +button-sub-right
        +icon('settings')

  +divider-block Rounded

  +multiple
    +button.rounded.primary 1
    +button.rounded.secondary 2
    +button.rounded.tertiary 3
    +button.rounded.quaternary 4
    +button.rounded.white 5
    +button.rounded.gray 6
    +button.rounded.black 7
    +button.rounded.yellow 8
    +button.rounded.olive 9
    +button.rounded.green 10
    +button.rounded.blue 11
    +button.rounded.violet 12
    +button.rounded.orange 13
    +button.rounded.purple 14
    +button.rounded.red 15
    +button.rounded.pink 16
    +button.rounded.teal 17
    +button.rounded.brown 18
    +button.rounded.error 19
    +button.rounded.warning 20
    +button.rounded.success 21
    +button.rounded.transparent 22
    +button.rounded.inherit 23
    +button.rounded.base 24

  +divider-block Tag

  +multiple
    +button-tag Normal
    +button-tag.sharp Sharp
    +button-tag.primary.tag-circle-white Colored

  +divider-block Ribbon

  +container.centered.xs-10.outlined.z-depth-1
    +button-ribbon.ribbon-left.ribbon-right.primary Left & Right
    +paragraph-sample
    +button-ribbon.ribbon-left.secondary Left
    +paragraph-sample
    +button-ribbon.ribbon-right.tertiary Right
    +paragraph-sample

  +divider-block Corner

  +container.outlined
    +button-corner("top-left").primary S
    +button-corner("top-right").secondary
      +icon("file_download").small
    +button-corner("bottom-right").quaternary
      +icon("thumb_up").small
    +button-corner("bottom-left").tertiary
      +icon("favorite").small
    +paragraph-sample

  +divider-block Badge

  +multiple
    +label-icon('settings').compact
      +button.compact.rounded.badge.xxsmall.quaternary.top-left 1
      +button.compact.rounded.badge.xxsmall.primary.top-right 2
      +button.compact.rounded.badge.xxsmall.tertiary.bottom-left 3
      +button.compact.rounded.badge.xxsmall.secondary.bottom-right 4

  +divider-block Floating

  +button-icon('settings').floating.rounded.secondary.large

  +divider-block Actions

  +multiple.actions
    +button("toggle_class ( 'outlined' )").outlined Toggle outlined
    +button("toggle_class ( 'compact' )").outlined Toggle compact
    +button("toggle_class ( 'invalid' )").outlined Toggle Invalid
    +button("toggle_class ( 'valid' )").outlined Toggle valid

append body-end
  +script.
    function toggle_class ( css_class ) {
      $('.button').not ( '.actions .button').toggleClass ( css_class );
    }
