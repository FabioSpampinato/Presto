                label Select:
                +select-btn({ options: elo_options, selected: "public", name: "select_name_1" }).outlined.fluid
                  span Select:
                  .valueholder.right
                label Slider:
                +slider({ name: "slider_name_1", min: 0, value: 75, max: 100 })
                +multiple
                  label Switcher:
                  +spacer
                  +switch({ name: "switcher_name_1", value: 1 })
              +container-footer
