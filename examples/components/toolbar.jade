
extends ../layout.jade

//- Toolbar

append main
  +divider-block Toolbars

  +toolbar.orange
    +button-icon('menu').compact
    span.large Schedule
    +spacer
    +button-icon("search").compact
    +button-icon('more_vert').compact

  +toolbar.violet
    +button-icon('menu').compact
    +breadcrumb.large
      +a(title="Components") Components
      +breadcrumb-divider.small
        +a(title="Toolbars") Toolbars
    +spacer
    +button-icon('more_vert').compact

  +toolbar.green
    span.large Toolbar
    +spacer
    +button-icon("search").compact
    +button-icon("person").compact
    +button-icon('more_vert').compact

  +toolbar.blue
    +button-icon("arrow_back").compact
    span.large Main page
    +spacer
    +button-icon('more_vert').compact

  +toolbar.red
    +button-icon('menu').compact
    +icon("image-image").xlarge
    span.large Title
    +spacer
    +switch({ name: "name", value: "value", colors: { on: "orange", off: "blue" }, icons: { on: "favorite", off: "favorite-outline" } })
    +button-icon("search").compact

  +divider-block With subs

  +toolbar.yellow
    +multiple-sub-left
      +button-icon('menu').compact
    +multiple-sub-center
      span.large Application
    +multiple-sub-right
      +button-icon('more_vert').compact

  +toolbar.brown
    +multiple-sub-left
      +button-icon("arrow_back").compact
    +multiple-sub-center
      span.large This is a page
