//- layout.jade

include ../dist/jade/svelto.mixins.jade

+html
    +head("Presto")
    +body.fixed-header
        header
            +header
                +toolbar.primary.z-depth-4
                    +button-icon('menu')
                    a.large(href="/") Presto
                    .spacer
                    +button-icon('refresh')
                    +button-icon('more_vert')
                block header
        main
            block main
        footer
            +footer.beveled
                p.text-center Presto, a framework
                block footer
