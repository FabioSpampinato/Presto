//- Options
  {
    name: '', // Input name
    tags: '', // Comma (by default) separated list of tags
    placeholder: '' // New tag input partial
  }

mixin tagbox(options)
  - options = options || {};
  - options.tags = options.tags || "";
  - options.placeholder = options.placeholder || "Add tag...";
  .tagbox&attributes(attributes)
    if options.name
      input(type="text" name=options.name value=options.tags).hidden
    else
      input(type="text" value=options.tags).hidden
    +multiple.tagbox-tags
      if options.name
        +input({ name: "partial_" + options.name, placeholder: options.placeholder }).tagbox-partial.autogrow.compact
      else
        +input({ name: "partial", placeholder: options.placeholder }).tagbox-partial.autogrow.compact
