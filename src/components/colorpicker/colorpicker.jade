mixin colorpicker
  .colorpicker&attributes(attributes)
    input(type=text name="colorpicker")
    .colorpicker-saturation-brightness-wrp
      .colorpicker-saturation
      .colorpicker-brightness
      .colorpicker-handler
    .colorpicker-hue-wrp
      .colorpicker-hue
      .colorpicker-handler
