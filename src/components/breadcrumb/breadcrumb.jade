mixin breadcrumb
  .breadcrumb&attributes(attributes)
    block

mixin breadcrumb-divider(icon)
  .breadcrumb-divider&attributes(attributes)
    if block
      block
    else
      - icon = icon || "chevron_right";
      +icon(icon)
