mixin form
  form&attributes(attributes)
    block

mixin form-button
  button(type="submit")&attributes(attributes).label.button.actionable
    block

mixin form-button-icon(icon)
  button(type="submit")&attributes(attributes).label.button.actionable
    +icon(icon)
    block
